<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@color/bg_all_my_books">

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@mipmap/myicon_switch3_deepgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:text="@string/all_my_books"
            android:textAlignment="center"
            android:textColor="@color/deep_gray_all_my_books"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/all_my_books_select"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="选择"
            android:textAlignment="center"
            android:textColor="@color/deep_gray_all_my_books"
            android:textSize="16dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/all_my_books_select"
            android:background="@mipmap/myicon_dot3_deepgray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/white">
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp">

            <ImageView
                android:id="@+id/local_recent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@mipmap/myicon_recent3_gray" />

            <View
                android:id="@+id/local_space"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/local_recent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/local_space"
                android:layout_centerHorizontal="true"
                android:text="@string/local_recent"
                android:textAlignment="center" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp">

            <ImageView
                android:id="@+id/local_file"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@mipmap/myicon_folder3_gray" />

            <View
                android:id="@+id/local_space2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/local_file" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/local_space2"
                android:layout_centerHorizontal="true"
                android:text="@string/local_folder"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/add_bg"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>